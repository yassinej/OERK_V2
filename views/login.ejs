<% include partials/header %>
  <div id="form-container" class="container">
    <div class="row">
      <h1>Login Page</h1>
      <hr>
      <h3>Login and leave comments.</h3>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <form class="form-vertical" action="/login" method="post">
          <div class="form-group">
            <label class="control-label" for="register-username">Username:</label>
            <input type="text" class="form-control" id="register-username" name="username" placeholder="Enter username">
          </div>
          <div class="form-group">
            <label class="control-label" for="register-password">Password:</label>
            <input type="password" class="form-control" id="register-password" name="password" placeholder="Enter password">
          </div>
          <div class="form-group">
            <div class="">
              <button id="register-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
<% include partials/footer %>
